@model Assig1.ViewModels.CityViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Cities</h1>

<div class="container">
    <div class="card mt-5">
        <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.CountryName">
        <div class="card-body">
            <h5 class="card-title">Country: @Model.CountryName</h5>
            <h5 class="card-title">Region: @Model.RegionName</h5>
            <input type="text" id="searchText" placeholder="Search cities..." />
            <table class="table mt-4">
                <thead>
                    <tr>
                        <th>City Name</th>
                        <th>Earliest Year</th>
                        <th>Latest Year</th>
                        <th>Total Records</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var city in Model.Cities)
                    {
                        <tr>
                            <td>@city.CityName</td>
                            <td>@city.EarliestYear</td>
                            <td>@city.LatestYear</td>
                            <td>@city.AirQualityDataCount</td>
                            <td>
                                <a asp-action="Details" asp-controller="Cities" asp-route-id="@city.CityId" class="btn btn-info">View Air Quality Data</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="container mt-4">
    <button onclick="goBack()" class="btn btn-primary">Back to Countries</button>
</div>
