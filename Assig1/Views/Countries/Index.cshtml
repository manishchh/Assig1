@model IEnumerable<Assig1.ViewModels.CountryViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Countries</h1>

<div class="container mt-4">
    <!-- Show the selected region using a Bootstrap panel -->
    @if (!string.IsNullOrEmpty(Model.FirstOrDefault()?.RegionName) && Model.FirstOrDefault()?.RegionName != "N/A")
    {

        <div class="alert alert-info">
            Selected Region: @Model.FirstOrDefault()?.RegionName
        </div>
    }

    <div class="row">
        @foreach (var country in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <img src="@country.ImageUrl" alt="@country.CountryName" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">@country.CountryName</h5>
                        <p class="card-text">Region: @country.RegionName</p>
                        <button type="button" class="btn btn-outline-success">Emission</button>
                        <button type="button" class="btn btn-outline-warning">Cities</button>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="container mt-4">
        <a asp-action="Index" asp-controller="Regions" class="btn btn-primary">Back to Region List</a>
    </div>
    
</div>
